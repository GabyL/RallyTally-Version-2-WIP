<h1>Sign Up</h1>


<%= form_for @user do |f| %>

<div>
  <%= f.label "name" %> <br>
  <%= f.text_field "name" %>
</div>

<div>
  <%= f.label "email" %> <br>
  <%= f.text_field "email" %>
</div>

<div>
  <%= f.label "phone" %> <br>
  <%= f.text_field "phone" %>
</div>

<div>
  <%= f.label "password" %> <br>
  <%= f.password_field "password" %>
</div>

<div>
  <%= f.submit "Submit"%>
</div>

<% end %>